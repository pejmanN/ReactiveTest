@page "/weather"

@using TestReactiveUI2.ViewModels
@inherits ReactiveComponentBase<WeatherViewModel>
@* @inject WeatherViewModel ViewModel *@

<div class="weather-container">
    <h2>Real-time Weather Information</h2>
    <div class="weather-info">
        <div class="weather-item">
            <h4>Temperature</h4>
            <p>@ViewModel.Temperature</p>
        </div>
        <div class="weather-item">
            <h4>Humidity</h4>
            <p>@ViewModel.Humidity</p>
        </div>
        <div class="weather-item">
            <h4>Wind Speed</h4>
            <p>@ViewModel.WindSpeed</p>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        ViewModel = new WeatherViewModel();
        base.OnInitialized();
    }
}